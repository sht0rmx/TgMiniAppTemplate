{
  "swagger": "2.0",
  "info": {
    "title": "TgMiniApp API Documentation",
    "description": "Backend part of https://github.com/sht0rmx/TgMiniAppTemplate",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/api/v1/auth/check": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "get user data from JWT token and validate active session",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/auth/check/bot": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "validate apiToken",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/auth/fingerprint/generate": {
      "get": {
        "tags": [],
        "description": "generate fingerprint for browser and set it in httpOnly cookie",
        "parameters": [
          {
            "name": "user-agent",
            "in": "header",
            "type": "string"
          },
          {
            "name": "x-forwarded-for",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/auth/login/webapp": {
      "post": {
        "tags": [],
        "description": "get session token by login with InitData param from TgMiniapp",
        "parameters": [
          {
            "name": "user-agent",
            "in": "header",
            "type": "string"
          },
          {
            "name": "x-forwarded-for",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "initData": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/auth/token/refresh": {
      "get": {
        "tags": [],
        "description": "get access JWT token from session token & fingerprint",
        "parameters": [
          {
            "name": "user-agent",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/auth/token/revoke": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "close session and mark session token \"revoked\"",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/ping": {
      "get": {
        "description": "check api health",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/session/all_sessions": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "get all authorized sessions",
        "responses": {
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/v1/session/current": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "get current session",
        "responses": {
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}